{
  "manifest_version": 2,
  "name": "Target Size Calculator (Improved)",
  "version": "1.0",
  "description": "Calculate physical sizes of UI elements across different devices",
  "permissions": [
    "activeTab",
    "https://mail.google.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}